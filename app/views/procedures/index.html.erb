<h1>Procedures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedures.each do |procedure| %>
      <tr>
        <td><%= procedure.title %></td>
        <td><%= procedure.body %></td>
        <td><%= procedure.user_id %></td>
        <td><%= link_to 'Show', users_procedure_path(procedure) %></td>
        <td><%= link_to 'Edit', edit_users_procedure_path(procedure) %></td>
        <td>
          <%= link_to 'Destroy', users_procedure_path(procedure), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Procedure', new_users_procedure_path %>
