<% content_for :title do %>
  New member
<% end %>

<h1 class="text-center my-4">Member new for team <%= current_admin.team.name %></h1>

<div class="container">
  <div class="row">
    <div class="offset-md-4 col-md-4">
      <div class="card">
        <div class="card-body">
          <%= form_with model: @new_user, url: account_create_path, method: "post", local: true do |f| %>
            <div class="mb-2">
              <%= f.label :email, class:"form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              <% if @new_user.errors.messages[:email].any? %>
                <p class="text-danger">
                  Email <%= @new_user.errors.messages[:email].to_sentence %>
                </p>
              <% end %>
            </div>

            <div class="mb-2">
              <%= f.label :first_name, class:"form-label" %>
              <%= f.text_field :first_name, value: "", class: "form-control" %>
              <% if @new_user.errors.messages[:first_name].any? %>
                <p class="text-danger">
                  First name <%= @new_user.errors.messages[:first_name].to_sentence %>
                </p>
              <% end %>
            </div>

            <div class="mb-2">
              <%= f.label :last_name, class:"form-label" %>
              <%= f.text_field :last_name, value: "", class: "form-control" %>
              <% if @new_user.errors.messages[:last_name].any? %>
                <p class="text-danger">
                  Last name <%= @new_user.errors.messages[:last_name].to_sentence %>
                </p>
              <% end %>
            </div>        

            <div class="mb-2">
              <%= f.label :password, class:"form-label" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-2">
              <%= f.label :password_confirmation, class:"form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              <% if @new_user.errors.messages[:password_confirmation].any? %>
                <p class="text-danger">
                  Password confirmation <%= @new_user.errors.messages[:password_confirmation].to_sentence %>
                </p>
              <% end %>
            </div>

            <div class="actions">
              <%= f.submit "Create User", class: "btn btn-success btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
